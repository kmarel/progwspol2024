<Window x:Class="View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:viewModel="clr-namespace:ViewModel;assembly=ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#FF202020">
    <Window.DataContext>
        <viewModel:Board/>
    </Window.DataContext>
    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="0*"/>
            <RowDefinition Height="0*"/>
        </Grid.RowDefinitions>
        <Canvas Margin="-336,-218,-338,-112" Grid.RowSpan="2" Background="#FF47902D">
            <Border BorderBrush="#FF662F09" BorderThickness="10" Height="330" Width="795" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <TextBox Canvas.Left="248" TextWrapping="Wrap" Canvas.Top="375" Width="150" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        </Canvas>
        <Button Content="Generuj" Grid.Row="1" Margin="125,136,-146,-169"/>
        <TextBlock Grid.Row="1" TextWrapping="Wrap" Margin="-101,129,44,-165" Foreground="White"><Run Language="pl-pl" Text="Podaj ilość kul do wygenerowania"/><LineBreak/><Run Language="pl-pl"/></TextBlock>
    </Grid>
</Window>
